<html>
    <head>
        <meta charset="utf-8">
    </head>
    <body>
        <h1> Listagem de Ferramentas </h1>

        <table id="tools">
            <tr>
                <td>ID</td>
                <td>Descrição</td>
                <td>Preço</td>
                <td>Editar</td>
                <td>Remover</td>
            </tr>
                <tr id="tool_${tool._id}" for (tool in tools)>
                <td>${tool._id}</td>
                <td>${tool.description}</td>
                <td>${tool.price}</td>
                <td><a href="#">Editar</a></td> 
                <td><a href="#" data-ref="${tool._id}" data-type="deletion">Remover</a></td>
            </tr>
        </table> 
        <script type="application/javascript" src="/static/js/deleteTool.js"></script>
    </body> 
</html>